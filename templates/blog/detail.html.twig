{% extends 'layout.html.twig' %}

{% block main %}

<div class="container">
    <div class="card">
        <img class="card-img-top" src="{{ asset('images/blog/' ~ article.image ) }}" alt="{{ article.titre }}">
        <div class="card-body" id="detail_article">
            <h5 class="card-title">{{ article.titre }}</h5>
            <p class="card-text">{{ article.description }}</p>
            <p class="card-text"><small class="text-muted"> Par {{ article.auteur }}  Le {{ article.dateCreated|date( " d-m-Y Ã  H:i ") }}</small></p>
        </div>
    </div>
</div>
{% endblock %}